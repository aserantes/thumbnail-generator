{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier/@typescript-eslint"
  ],
  "plugins": [
    "sort-destructure-keys",
    "sort-imports-es6-autofix",
    "prettier",
    "react"
  ],
  "rules": {
    "no-use-before-define": 0,
    "@typescript-eslint/no-use-before-define": 0,
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/explicit-module-boundary-types": 0,
    "@typescript-eslint/interface-name-prefix": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/ban-ts-ignore": 0,
    "react/self-closing-comp": [2, { "component": true, "html": true }],
    "react/no-array-index-key": 2,
    "react/destructuring-assignment": [2, "always"],
    "react/jsx-closing-bracket-location": 2,
    "react/jsx-sort-props": [
      2,
      {
        "callbacksLast": true,
        "shorthandFirst": true,
        "shorthandLast": false,
        "ignoreCase": true,
        "noSortAlphabetically": false,
        "reservedFirst": false
      }
    ],
    "padding-line-between-statements": [
      2,
      {
        "blankLine": "always",
        "prev": ["import", "export", "return", "const"],
        "next": ["*"]
      },
      {
        "blankLine": "always",
        "prev": ["*"],
        "next": ["import", "export", "return", "const"]
      },
      {
        "blankLine": "never",
        "prev": ["import"],
        "next": ["import"]
      },
      {
        "blankLine": "never",
        "prev": ["return"],
        "next": ["return"]
      },
      {
        "blankLine": "never",
        "prev": ["const", "let"],
        "next": ["const", "let"]
      }
    ],
    "no-unneeded-ternary": 2,
    "prefer-destructuring": [2, { "object": true, "array": false }],
    "prefer-template": 2,
    "no-unreachable": 2,
    "eqeqeq": [2, "smart"],
    "no-shadow": [2, { "hoist": "all" }],
    "no-useless-return": 2,
    "no-var": 2,
    "object-shorthand": 2,
    "no-useless-rename": 2,
    "spaced-comment": [2, "always", { "markers": ["/"] }],
    "sort-destructure-keys/sort-destructure-keys": 2,
    "sort-imports-es6-autofix/sort-imports-es6": [
      2,
      {
        "ignoreCase": false,
        "ignoreMemberSort": false,
        "memberSyntaxSortOrder": ["single", "multiple", "none", "all"]
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.tsx"],
      "rules": {
        "react/prop-types": "off"
      }
    },
    {
      "files": ["**/*.test.tsx"],
      "extends": ["plugin:jest/recommended"],
      "plugins": ["jest"],
      "rules": {
        "@typescript-eslint/no-empty-function": 0,
        "@typescript-eslint/no-unused-vars": [
          2,
          { "varsIgnorePattern": "describe|it|test" }
        ]
      }
    },
    {
      "files": "server/**/*.js",
      "rules": {
        "simple-import-sort/sort": "off",
        "import/order": ["error", { "newlines-between": "always" }]
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
