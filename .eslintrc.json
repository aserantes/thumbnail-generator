{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:react/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier/@typescript-eslint"
  ],
  "rules": {
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/explicit-module-boundary-types": 0,
    "@typescript-eslint/interface-name-prefix": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "@typescript-eslint/ban-ts-ignore": 0,
    "react/self-closing-comp": [2, { "component": true, "html": true }],
    "react/no-array-index-key": 2,
    "react/destructuring-assignment": [2, "always"],
    "react/jsx-closing-bracket-location": 2,
    "react/jsx-sort-props": [
      2,
      {
        "callbacksLast": true,
        "shorthandFirst": true,
        "shorthandLast": false,
        "ignoreCase": true,
        "noSortAlphabetically": false,
        "reservedFirst": false
      }
    ],
    "padding-line-between-statements": [
      2,
      {
        "blankLine": "always",
        "prev": ["multiline-const", "export", "function"],
        "next": "*"
      },
      {
        "blankLine": "always",
        "prev": ["*"],
        "next": ["expression", "multiline-const", "export", "function"]
      }
    ],
    "no-unneeded-ternary": 2,
    "prefer-destructuring": [2, { "object": true, "array": false }],
    "prefer-template": 2,
    "no-unreachable": 2,
    "eqeqeq": [2, "smart"],
    "no-shadow": [2, { "hoist": "all" }],
    "no-useless-return": 2,
    "no-var": 2,
    "object-shorthand": 2,
    "no-useless-rename": 2,
    "spaced-comment": [2, "always"]
  },
  "overrides": [
    {
      "files": ["**/*.tsx"],
      "rules": {
        "react/prop-types": "off"
      }
    },
    {
      "files": ["**/*.test.tsx"],
      "rules": {
        "@typescript-eslint/no-empty-function": 0,
        "@typescript-eslint/no-unused-vars": [
          2,
          { "varsIgnorePattern": "describe|it|test" }
        ]
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "ignorePatterns": ["coverage/", "node_modules/", "src/serviceWorker.ts"]
}
